<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true">

  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ABSOLUTE} %t %p %c:%L - %m%n"/>
    </layout>
  </appender>

  <logger name="com.minetats" additivity="false">
    <level value="debug"/>
    <appender-ref ref="console"/>
  </logger>

  <logger name="io.netty" additivity="false">
    <level value="warn"/>
    <appender-ref ref="console"/>
  </logger>

  <logger name="io.netty.util.internal" additivity="false">
    <level value="warn"/>
    <appender-ref ref="console"/>
  </logger>

  <logger name="io.netty.handler.codec.http.websocketx" additivity="false">
    <level value="warn"/>
    <appender-ref ref="console"/>
  </logger>
</log4j:configuration>
